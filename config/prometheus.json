{
  "exporter": {
    "port": 9100,
    "host": "127.0.0.1",
    "path": "/metrics",
    "update_interval_seconds": 15
  },
  "services": [
    "mxrc-rt.service",
    "mxrc-nonrt.service"
  ],
  "metrics": {
    "service_state": {
      "enabled": true,
      "help": "Service state (1=active, 0=inactive)",
      "type": "gauge"
    },
    "cpu_usage_seconds": {
      "enabled": true,
      "help": "Total CPU time in seconds",
      "type": "counter"
    },
    "memory_bytes": {
      "enabled": true,
      "help": "Memory usage in bytes",
      "type": "gauge"
    },
    "restart_count": {
      "enabled": true,
      "help": "Number of service restarts",
      "type": "counter"
    }
  }
}
